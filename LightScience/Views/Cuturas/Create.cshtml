@model LightScience.Models.Cutura

@{
    ViewData["Title"] = "Criar Cutura";
    Layout = "_LayoutNavBar";
}

<style>
    body {
        font-size: 1.2em; /* Aumenta o tamanho da fonte de todo o corpo do documento */
    }

    h1, h4 {
        font-size: 2em; /* Aumenta o tamanho da fonte dos títulos */
    }

    .form-label {
        font-size: 1.3em; /* Diminui o tamanho da fonte dos rótulos dos campos de entrada */
    }

    .form-control {
        font-size: 1.1em; /* Diminui o tamanho da fonte dentro dos campos de entrada */
    }
</style>

<!DOCTYPE html>
<html lang="pt-br">
<!-- Define o idioma da página como português do Brasil -->
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - LightScience</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js"></script>
    <!-- Adicionando o Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- Adicionando o Bootstrap 5 -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <h1 class="text-success my-4" style="text-align: left;">
        <i class="fas fa-leaf"></i> <!-- Ícone de uma folha/planta -->
        Criar Cultura
    </h1>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0">Informações da Cultura</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <div class="form-group mb-3">
                                <label asp-for="CodigoCutura" class="form-label"></label>
                                <input asp-for="CodigoCutura" class="form-control" readonly="readonly" placeholder="Será gerado automaticamente" />
                                <span asp-validation-for="CodigoCutura" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Categoria" class="form-label"></label>
                                <input asp-for="Categoria" class="form-control" placeholder="Digite a categoria" />
                                <span asp-validation-for="Categoria" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Descricao" class="form-label"></label>
                                <input asp-for="Descricao" class="form-control" placeholder="Digite a descrição" />
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Nome" class="form-label"></label>
                                <input asp-for="Nome" class="form-control" placeholder="m²" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group text-center">
                                <input type="submit" value="Criar" class="btn btn-success btn-lg" />
                            </div>
                        </form>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Voltar para a Lista</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
