@model LightScience.Models.Cutura

@{
    ViewData["Title"] = "Details";
    Layout = "_LayoutNavBar";
}

<style>
    .details-text {
        color: green;
        font-size: 1.5em; /* Tamanho da fonte dos dados da cutura */
    }

    .details-row {
        border-bottom: 1px solid #ccc;
        padding: 10px 0;
    }

    .font-weight-bold {
        font-size: 1.5em; /* Tamanho da fonte do texto em preto */
    }
</style>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - LightScience</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js"></script>
    <!-- Adicionando o Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    <div class="container py-5">
        <h1 class="text-success my-4" style="text-align: left;">
            <i class="fas fa-leaf"></i> <!-- Ícone de uma folha/planta -->
            Detalhes da Cultura
        </h1>

        <div class="card shadow-lg p-3 mb-5 bg-white rounded">
            <div class="card-body">
                <dl class="row">
                    <div class="details-row">
                        <dt class="col-sm-3 font-weight-bold">
                            @Html.DisplayNameFor(model => model.CodigoCutura)
                        </dt>
                        <dd class="col-sm-9 details-text">
                            @Html.DisplayFor(model => model.CodigoCutura)
                        </dd>
                    </div>
                    <div class="details-row">
                        <dt class="col-sm-3 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Categoria)
                        </dt>
                        <dd class="col-sm-9 details-text">
                            @Html.DisplayFor(model => model.Categoria)
                        </dd>
                    </div>
                    <div class="details-row">
                        <dt class="col-sm-3 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>
                        <dd class="col-sm-9 details-text">
                            @Html.DisplayFor(model => model.Descricao)
                        </dd>
                    </div>
                    <div class="details-row">
                        <dt class="col-sm-3 font-weight-bold">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-9 details-text">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                    </div>
                </dl>
            </div>
        </div>

        <div class="mt-3 text-center">
            <a asp-action="Edit" asp-route-id="@Model?.CuturaId" class="btn btn-warning">Editar</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Voltar para a lista</a>
        </div>
    </div>

    <!-- Adicionando o Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-beta1/js/bootstrap.bundle.min.js"></script>
</body>
</html>